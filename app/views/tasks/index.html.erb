<body>
padding-top: 60px;
<div class="row offset1">
  margin-top: 200px;
  margin-left: 60px;
  <h1>Tasks</h1>
</div>

<table class="table-bordered offset1">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Due Date</th>
    <th>Associated Document</th>
    <th>Responsibility</th>
    <th></th>
    <th>Creator</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.duedate.to_formatted_s(:long_ordinal) %></td>
    <td><%= check_box_tag(task.associated_doc) %> </td>
    <td><%= radio_button_tag(:teammates, "one") %>
    <%= label_tag(:teammates_one, "1 Teammate") %></td>
    <td><%= radio_button_tag(:teammates, "two") %>
   <%= label_tag(:teammates_two, "Whole team") %></td>
    <td><%= collection_select(:task, :name, Teammate.all, :name, :name) %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

<br />
<div class="row offset1" >
  <%= link_to 'New Task', new_task_path %>
</div>
</body>

